<resources>

    <!-- 默认的主题 -->
    <style name="DefAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
.        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    <!--dialog风格activity-->
    <style name="DefDialogActivityTheme" parent="@style/Theme.MaterialComponents.Light.Dialog.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--尽量不要使用，推荐使用系统动画-->
    <!--activity切换动画-->
    <style name="ActivityChangeAnim" parent="@android:style/Animation.Activity">
        <!--A到B,B进入动画-->
        <!--A到B,A退出动画-->
        <!--B回到A,A进入动画-->
        <!--B回到A,B退出动画-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <!--宽和高都是wrap_content-->
    <style name="WWLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽和高都是match_parent-->
    <style name="MMLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--宽是match_parent高是wrap_content-->
    <style name="MWLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽是wrap_content高是match_parent-->
    <style name="WMLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--宽是match_parent高是0权重是1-->
    <style name="MZWLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是0高是match_parent权重是1-->
    <style name="ZMWLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是wrap_content高是0权重是1-->
    <style name="WZWLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是0高是wrap_content权重是1-->
    <style name="ZWWLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--水平线性布局宽高wrap_content-->
    <style name="LinearLayoutHorizontalWW" parent="WWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽高wrap_content-->
    <style name="LinearLayoutVerticalWW" parent="WWLayout">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽高match_parent-->
    <style name="LinearLayoutHorizontalMM" parent="MMLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽高match_parent-->
    <style name="LinearLayoutVerticalMM" parent="MMLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <!--水平线性布局宽是match_parent高是wrap_content-->
    <style name="LinearLayoutHorizontalMW" parent="MWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是wrap_content高是match_parent-->
    <style name="LinearLayoutVerticalMW" parent="MWLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <!--水平线性布局宽是match_parent高是wrap_content-->
    <style name="LinearLayoutHorizontalWM" parent="WMLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是wrap_content高是match_parent-->
    <style name="LinearLayoutVerticalWM" parent="WMLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <!--水平线性布局宽是宽是match_parent高是0权重是1-->
    <style name="LinearLayoutHorizontalMZW" parent="MZWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平线性布局宽是0高是match_parent权重是1-->
    <style name="LinearLayoutHorizontalZMW" parent="ZMWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是宽是match_parent高是0权重是1-->
    <style name="LinearLayoutVerticalMZW" parent="MZWLayout">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直线性布局宽是0高是match_parent权重是1-->
    <style name="LinearLayoutVerticalZMW" parent="ZMWLayout">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽是宽是wrap_content高是0权重是1-->
    <style name="LinearLayoutHorizontalWZW" parent="WZWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平线性布局宽是0高是wrap_content权重是1-->
    <style name="LinearLayoutHorizontalZWW" parent="ZWWLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是宽是wrap_content高是0权重是1-->
    <style name="LinearLayoutVerticalWZW" parent="WZWLayout">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直线性布局宽是0高是wrap_content权重是1-->
    <style name="LinearLayoutVerticalZWW" parent="ZWWLayout">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
